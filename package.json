{
  "name": "hapi-mongo-swagger",
  "version": "1.0.0",
  "description": "GraphQL API based on Hapi with Swagger powered by MongoDB",
  "main": "dist/index.js",
  "module": "dist/index.esm.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "keywords": [],
  "author": "David Rivera <jherax@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "scripts": {
    "prepare": "husky install",
    "release": "standard-version",
    "mongod": "node scripts/start-mongod.js",
    "clean": "rimraf dist",
    "build": "tsc -p config/tsconfig.build.json",
    "build-prd": "NODE_ENV=prod node config/esbuild.js",
    "build-all": "run-s clean build-prd",
    "ts-config": "npm run build -- --showConfig",
    "dev-server": "concurrently -k \"npm:build -- -w\" \"nodemon --dns-result-order=ipv4first --trace-warnings dist/index.js\"",
    "lint": "eslint . --ext .ts",
    "test": "jest -c=config/jest.config.js --detectOpenHandles",
    "test:staged": "jest -c=config/jest.config.js --bail --findRelatedTests",
    "test:watch": "jest -c=config/jest.config.js --silent=false --verbose --watch"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@as-integrations/hapi": "^2.0.1",
    "@hapi/boom": "~10.0.1",
    "@hapi/hapi": "~20.3.0",
    "@hapi/inert": "~7.1.0",
    "chalk": "~4.1.2",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "hapi-rate-limit": "~7.1.0",
    "mongoose": "~7.6.5",
    "qs": "~6.11.2",
    "typescript": "~5.1.5",
    "winston": "~3.11.0",
    "winston-daily-rotate-file": "~4.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "~18.4.3",
    "@commitlint/config-conventional": "~18.4.3",
    "@graphql-tools/mock": "^9.0.0",
    "@graphql-tools/schema": "^10.0.2",
    "@swc/jest": "~0.2.29",
    "@types/jest": "~29.5.10",
    "@types/node": "~20.10.0",
    "@types/supertest": "~2.0.16",
    "@typescript-eslint/eslint-plugin": "~6.13.1",
    "@typescript-eslint/parser": "~6.13.1",
    "concurrently": "~8.2.2",
    "dotenv": "~16.3.1",
    "esbuild": "~0.19.7",
    "eslint": "~8.55.0",
    "eslint-config-prettier": "~9.1.0",
    "eslint-plugin-simple-import-sort": "~10.0.0",
    "husky": "~8.0.3",
    "jest": "~29.7.0",
    "lint-staged": "~15.1.0",
    "mongodb-memory-server": "~9.1.1",
    "nodemon": "~3.0.2",
    "npm-dts": "~1.3.12",
    "npm-run-all": "~4.1.5",
    "prettier": "~3.1.0",
    "rimraf": "~5.0.5",
    "standard-version": "~9.5.0",
    "supertest": "~6.3.3",
    "ts-node": "~10.9.1"
  },
  "lint-staged": {
    "{backend,scripts}/**/*.{js,jsx,ts,tsx}": [
      "npm run test:staged"
    ]
  }
}
