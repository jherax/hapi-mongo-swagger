{
  "name": "hapi-mongo-swagger",
  "version": "1.0.0",
  "description": "GraphQL API based on Nodejs with Swagger documentation powered by MongoDB",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "husky install",
    "release": "standard-version",
    "mongod": "node scripts/start-mongod.js",
    "build": "tsc -p tsconfig.build.json",
    "ts-config": "npm run build -- --showConfig",
    "dev-server": "concurrently -k \"npm:build -- -w\" \"nodemon dist/index.js\"",
    "lint": "eslint . --ext .ts",
    "test": "jest --detectOpenHandles",
    "test:staged": "jest --bail --findRelatedTests",
    "test:watch": "jest --silent=false --verbose --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "dependencies": {
    "@hapi/hapi": "^21.3.2",
    "mongoose": "^7.4.1",
    "typescript": "^5.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@swc/jest": "^0.2.27",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.4.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "concurrently": "^7.6.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^13.2.3",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1"
  },
  "lint-staged": {
    "backend/**/*.{js,jsx,ts,tsx}": ["npm run test:staged"]
  }
}
